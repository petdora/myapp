<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friendlist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/friend_list"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textColor="#1EA9D8"
                android:textSize="18dp"
                />
            <Button
                android:id="@+id/friend_talk"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="聊天"
                android:textColor="#1EA9D8"
                android:textSize="18dp" />
            <Button
                android:id="@+id/friend_new"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扭蛋"
                android:textColor="#1EA9D8"
                android:textSize="18dp"
                />
        </LinearLayout>>

    </LinearLayout>>
    <ScrollView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/qq_image"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/qq_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/qq_image"
                    android:hint="qq名"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/qq_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qq_name"
                    android:layout_alignLeft="@id/qq_name"
                    android:layout_marginTop="10dp"
                    android:hint="hello你好"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/qq_remind"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#E3E3E3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/qq_image2"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/qq_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/qq_image2"
                    android:hint="qq名"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/qq_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qq_name2"
                    android:layout_alignLeft="@id/qq_name2"
                    android:layout_marginTop="10dp"
                    android:hint="hello你好"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/qq_remind2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#E3E3E3" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>