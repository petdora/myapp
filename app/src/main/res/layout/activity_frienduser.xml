<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".frienduser">
    <ImageView
        android:id="@+id/iv_personal_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/defualt_personal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多多"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_personal_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_personal_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_personal_icon" />

    <Button
        android:id="@+id/btn_delete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/yellowbutton"
        android:text="刪除好友"
        android:textColor="#FF9800"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_personal_icon" />

    <Button
        android:id="@+id/btn_talk"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginStart="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bluebutton"
        android:text="跟ta聊天"
        android:textColor="#76D2F1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_delete"
        app:layout_constraintTop_toBottomOf="@+id/iv_personal_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>